<p style="color: green"><%= notice %></p>
<div class="container"></div>
<h1>Categories</h1>


<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to "Show this category", category, class: 'btn btn-primary', style: 'background-color: rgb(108,117,125);' %>
    </p>
  <% end %>
</div>
<p>
<div><%= link_to "New category", new_category_path, class: 'btn btn-primary', style: 'background-color: rgb(108,117,125);' %></div>
</p>


<%= paginate @categories %>
